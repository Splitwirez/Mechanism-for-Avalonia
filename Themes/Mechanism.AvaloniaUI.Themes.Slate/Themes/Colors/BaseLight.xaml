<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mectrl="clr-namespace:Mechanism.AvaloniaUI.Controls;assembly=Mechanism.AvaloniaUI">
  <SolidColorBrush x:Key="WindowBackground">#FFFFFFFF</SolidColorBrush>
  <SolidColorBrush x:Key="ActiveWindowOuterBorderBrush">#FF232323</SolidColorBrush>
  <GradientStops x:Key="ActiveWindowTopInnerBorderGradientStops">
    <GradientStop Offset="0" Color="#FF6B6C6D"/>
    <GradientStop Offset="0.45" Color="#FFD2D6D9"/>
    <GradientStop Offset="0.55" Color="#FFD2D6D9"/>
    <GradientStop Offset="1" Color="#FF6B6C6D"/>
  </GradientStops>
  <SolidColorBrush x:Key="ActiveWindowMainInnerBorderBrush">#FF848484</SolidColorBrush>
  <GradientStops x:Key="ActiveTitlebarGradientStops">
    <GradientStop Offset="0" Color="#FF4E4E4E"/>
    <GradientStop Offset="0.45" Color="#FFA5A4A5"/>
    <GradientStop Offset="0.55" Color="#FFA5A4A5"/>
    <GradientStop Offset="1" Color="#FF4E4E4E"/>
  </GradientStops>
  <SolidColorBrush x:Key="InactiveWindowOuterBorderBrush">#FF777E80</SolidColorBrush>
  <GradientStops x:Key="InactiveWindowTopInnerBorderGradientStops">
    <GradientStop Offset="0" Color="#FF6B6C6D"/>
    <GradientStop Offset="0.45" Color="#FFD2D6D9"/>
    <GradientStop Offset="0.55" Color="#FFD2D6D9"/>
    <GradientStop Offset="1" Color="#FF6B6C6D"/>
  </GradientStops>
  <SolidColorBrush x:Key="InactiveWindowMainInnerBorderBrush">#FFB1B4B6</SolidColorBrush>
  <GradientStops x:Key="InactiveTitlebarGradientStops">
    <GradientStop Offset="0" Color="#FF9CA1A2"/>
    <GradientStop Offset="0.45" Color="#FFCBCECF"/>
    <GradientStop Offset="0.55" Color="#FFCBCECF"/>
    <GradientStop Offset="1" Color="#FF9CA1A2"/>
  </GradientStops>



  <SolidColorBrush x:Key="ButtonBorderBrush">#FF003C74</SolidColorBrush>
  <GradientStops x:Key="ButtonShineBorderGradientStops">
    <GradientStop Offset="0" Color="#40FFFFFF"/>
    <GradientStop Offset="0.9" Color="#00FFFFFF"/>
    <GradientStop Offset="1" Color="#40000000"/>
  </GradientStops>
  
  <GradientStops x:Key="ButtonIdleBackgroundGradientStops">
    <GradientStop Offset="0" Color="#FFFDFDFD"/>
    <GradientStop Offset="1" Color="#FFCDCCDE"/>
  </GradientStops>
  <LinearGradientBrush x:Key="ButtonIdleBackground" StartPoint="0%,0%" EndPoint="0%,100%" GradientStops="{DynamicResource ButtonIdleBackgroundGradientStops}"/>
  <GradientStops x:Key="ButtonHoverBorderGradientStops">
    <GradientStop Offset="0" Color="#FFFDD889"/>
    <GradientStop Offset="1" Color="#FFF8B230"/>
  </GradientStops>
  <SolidColorBrush x:Key="ButtonPressedInnerBorderBrush">#FFFFFFFF</SolidColorBrush>
  
  <SolidColorBrush x:Key="ButtonDisabledBackground">#FFC4C3BF</SolidColorBrush>
  <SolidColorBrush x:Key="ButtonDisabledBorderBrush">#FFF1F1ED</SolidColorBrush>

  
  
  <GradientStops x:Key="NavigationButtonFrameFillGradientStops">
    <GradientStop Offset="0" Color="#2D161616"/>
    <GradientStop Offset="0.5" Color="#8DE8E8E8"/>
    <GradientStop Offset="1" Color="#BAF5F5F5"/>
  </GradientStops>
  <GradientStops x:Key="NavigationButtonFrameStrokeGradientStops">
    <GradientStop Offset="0" Color="#2E161616"/>
    <GradientStop Offset="1" Color="#00161616"/>
  </GradientStops>

  <SolidColorBrush x:Key="NavigationButtonIconStroke">#7F000000</SolidColorBrush>
  <GradientStops x:Key="NavigationButtonIconFillGradientStops">
    <GradientStop Offset="0.25" Color="#FFFFFFFF"/>
    <GradientStop Offset="1" Color="#FFCCD4DE"/>
  </GradientStops>

  <SolidColorBrush x:Key="TreeViewExpanderIdleStroke">#FFBABABA</SolidColorBrush>
  <GradientStops x:Key="TreeViewExpanderIdleFillGradientStops">
    <GradientStop Offset="0" Color="#FFF0F0F0"/>
    <GradientStop Offset="1" Color="#FFE1E1E1"/>
  </GradientStops>

  <SolidColorBrush x:Key="PaneBorderBrush">#FFB4B4B4</SolidColorBrush>
</ResourceDictionary>
