    <DockPanel>
        <meec:ExpandToFillView x:Name="ExpandToFillView" DockPanel.Dock="{Binding XamlDock}" Orientation="{Binding Orientation}">
            <meec:ExpandToFillViewItem Header="Base">
                <mecore:AttachedIcon.Icon>
                    <ControlTemplate>
                        <Border Width="16" Height="16" BoxShadow="0 2 6 #9F000000" CornerRadius="2" Margin="4">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="Red"/>
                                    <GradientStop Offset="1" Color="#FFC00000"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </mecore:AttachedIcon.Icon>
                <Rectangle Fill="DarkRed" Margin="10" MinWidth="50" MinHeight="10"/>
            </meec:ExpandToFillViewItem>
            <meec:ExpandToFillViewItem Header="Coat">
                <mecore:AttachedIcon.Icon>
                    <ControlTemplate>
                        <Border Width="16" Height="16" BoxShadow="0 2 6 #9F000000" CornerRadius="2" Margin="4">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="Green"/>
                                    <GradientStop Offset="1" Color="#FF006000"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </mecore:AttachedIcon.Icon>
                <Rectangle Fill="DarkGreen" Margin="10" MinWidth="50" MinHeight="10"/>
            </meec:ExpandToFillViewItem>
            <meec:ExpandToFillViewItem Header="Detail">
                <mecore:AttachedIcon.Icon>
                    <ControlTemplate>
                        <Border Width="16" Height="16" BoxShadow="0 2 6 #9F000000" CornerRadius="2" Margin="4">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="Blue"/>
                                    <GradientStop Offset="1" Color="#FF0000C0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </mecore:AttachedIcon.Icon>
                <Rectangle Fill="DarkBlue" Margin="10" MinWidth="50" MinHeight="10"/>
            </meec:ExpandToFillViewItem>
        </meec:ExpandToFillView>
        <meec:ExpandToFillView x:Name="BoundExpandToFillView" Items="{Binding Items}" DockPanel.Dock="{Binding BoundDock}" Orientation="{Binding Orientation}">
            <!--meec:ExpandToFillView.Styles>
                <Style Selector="meec|ExpandToFillView#BoundExpandToFillView meec|ExpandToFillViewItem">
                    <Setter Property="mecore:AttachedIcon.Icon" Value="{DynamicResource ResourceKey={Binding Path=DataContext.IconKey, RelativeSource={RelativeSource Mode=Self}}}}"/>
                </Style>
            </meec:ExpandToFillView.Styles-->
            <meec:ExpandToFillView.ItemHeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </meec:ExpandToFillView.ItemHeaderTemplate>
            <meec:ExpandToFillView.ItemTemplate>
                <DataTemplate>
                    <Ellipse Fill="{Binding Brush}" Margin="10" MinWidth="50" MinHeight="10"/>
                </DataTemplate>
            </meec:ExpandToFillView.ItemTemplate>
        </meec:ExpandToFillView>
        <UniformGrid Columns="2" Margin="5" VerticalAlignment="Center">
            <HeaderedContentControl Classes="groupBox" Header="About">
                <TextBlock Text="The ExpandToFillView displays multiple items in frames, only displaying the contents of one item at a time, and allowing the user to switch between them freely. The one on the left/above has its items defined in XAML, while the one on the right/below has them bound to a collection property in the DataContext." TextWrapping="Wrap"/>
            </HeaderedContentControl>
            <HeaderedContentControl Classes="groupBox" Header="Customization" Margin="5,0,0,0">
                <Button Content="Switch Orientation" Command="{Binding ToggleOrientation}" CommandParameter="{x:Null}"/>
            </HeaderedContentControl>
        </UniformGrid>
    </DockPanel>
</UserControl>