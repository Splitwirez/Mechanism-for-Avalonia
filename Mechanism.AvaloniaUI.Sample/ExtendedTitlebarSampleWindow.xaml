<mewin:DecoratableWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mewin="clr-namespace:Mechanism.AvaloniaUI.Controls.Windows;assembly=Mechanism.AvaloniaUI"
        x:Class="Mechanism.AvaloniaUI.Sample.ExtendedTitlebarSampleWindow"
        Title="ExtendedTitlebarSampleWindow" Width="400" Height="400">
  <Panel>
    <Slider Value="{Binding ExtendedTitlebarHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type mewin:DecoratableWindow}}}" VerticalAlignment="Top"/>
  </Panel>
</mewin:DecoratableWindow>
