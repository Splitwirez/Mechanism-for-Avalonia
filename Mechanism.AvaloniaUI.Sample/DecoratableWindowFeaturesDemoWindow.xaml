<mewin:DecoratableWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mewin="clr-namespace:Mechanism.AvaloniaUI.Controls.Windows;assembly=Mechanism.AvaloniaUI"
        x:Class="Mechanism.AvaloniaUI.Sample.DecoratableWindowFeaturesDemoWindow"
        Title="DecoratableWindow features demo Window" Width="400" Height="400">
  <StackPanel Orientation="Vertical">
    <TextBlock Text="ExtendedTitlebarHeight:"/>
    <Slider Value="{Binding $parent[mewin:DecoratableWindow].ExtendedTitlebarHeight}" VerticalAlignment="Top"/>
    <!--, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type mewin:DecoratableWindow}}-->
    <CheckBox Content="UseBlur" IsChecked="{Binding $parent[mewin:DecoratableWindow].UseBlur}"/>
    <CheckBox Content="ShowBlur" IsChecked="{Binding $parent[mewin:DecoratableWindow].ShowIcon}"/>
    <CheckBox Content="ShowTitle" IsChecked="{Binding $parent[mewin:DecoratableWindow].ShowTitle}"/>
  </StackPanel>
</mewin:DecoratableWindow>
